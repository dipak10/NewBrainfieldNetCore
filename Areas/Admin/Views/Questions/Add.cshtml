@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Areas.Admin.Models.QuestionMasterModel

@{
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form asp-controller="Questions" asp-action="Add" method="post">
                    <div class="card-header">
                        <h3 class="card-title">Add Product</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="position-relative form-group">
                            <label asp-for="ExamID" class=""></label>
                            <select class="form-control" asp-for="ExamID" asp-items="Model.ExamMasters" id="ExamMasters">
                                <option>Select any exam</option>
                            </select>
                            <span asp-validation-for="ExamID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="StandardID" class=""></label>
                            <select asp-for="StandardID"
                                    asp-items="@(new SelectList(Model.Standards,"StandardID","StandardName"))"
                                    class="form-control" id="StandardMaster">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="StandardID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="SubjectID" class=""></label>
                            <select asp-for="SubjectID"
                                    asp-items="@(new SelectList(Model.Subjects,"SubjectID","SubjectName"))"
                                    class="form-control" id="SubjectMaster">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="ExamID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="ChapterID" class=""></label>
                            <select asp-for="ChapterID"
                                    asp-items="@(new SelectList(Model.Chapters,"ChapterID","ChapterName"))"
                                    class="form-control" id="ChapterMaster">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="ChapterID" class="text-danger"></span>
                        </div>


                        <div class="position-relative form-group">
                            <label asp-for="Mark" class=""></label>
                            <input asp-for="Mark" type="text" class="form-control" placeholder="Mark">
                            <span asp-validation-for="Mark" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="NegativeMark" class=""></label>
                            <input asp-for="NegativeMark" type="text" class="form-control" placeholder="Mark">
                            <span asp-validation-for="NegativeMark" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="CorrectAnswer" class=""></label>
                            <br />                            
                            <input asp-for="CorrectAnswer" name="CorrectAnswer" type="radio" checked value="A"> Option A<br />
                            <input asp-for="CorrectAnswer" name="CorrectAnswer" type="radio" value="B"> Option B <br />
                            <input asp-for="CorrectAnswer" name="CorrectAnswer" type="radio" value="C"> Option C <br />
                            <input asp-for="CorrectAnswer" name="CorrectAnswer" type="radio" value="D"> Option D <br />

                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Question" class=""></label>
                            <textarea asp-for="Question" name="Question" type="text" class="form-control" placeholder="Question" id="Question"></textarea>
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="OptionA" class=""></label>
                            <textarea asp-for="OptionA" name="OptionA" type="text" class="form-control" placeholder="Option A" id="OptionA"></textarea>
                            <span asp-validation-for="OptionA" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="OptionB" class=""></label>
                            <textarea asp-for="OptionB" name="OptionB" type="text" class="form-control" placeholder="Option B" id="OptionB"></textarea>
                            <span asp-validation-for="OptionB" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="OptionC" class=""></label>
                            <textarea asp-for="OptionC" name="OptionC" type="text" class="form-control" placeholder="Option C" id="OptionC"></textarea>
                            <span asp-validation-for="OptionC" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="OptionD" class=""></label>
                            <textarea asp-for="OptionD" name="OptionD" type="text" class="form-control" placeholder="Option D" id="OptionD"></textarea>
                            <span asp-validation-for="OptionD" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Explanation" class=""></label>
                            <textarea asp-for="Explanation" name="Explanation" type="text" class="form-control" placeholder="Explanation" id="Explanation"></textarea>
                            <span asp-validation-for="Explanation" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-lg pull-left"
                           asp-area="Admin"
                           asp-controller="Questions"
                           asp-action="Index">
                            Questions List
                        </a>

                        <input type="reset" class="btn btn-outline-light btn-lg pull-right ml-3" value="Cancel">

                        <input type="submit" class="btn btn-outline-success btn-lg pull-right" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        $('#Question, #OptionA, #OptionB, #OptionC, #OptionD, #Explanation').summernote({
            placeholder: 'Placeholder',
            tabsize: 2,
            height: 200
        });
    </script>
}