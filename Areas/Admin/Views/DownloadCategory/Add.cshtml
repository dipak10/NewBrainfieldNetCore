@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Dto.DownloadCategoryDTO

@{
    Layout = "_AdminLayout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <form asp-controller="DownloadCategory" asp-action="Add" method="post">
                    <div class="card-header">
                        <h3 class="card-title">Add Download Category</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        

                        <div class="position-relative form-group">
                            <label asp-for="DownloadCategoryName" class=""></label>
                            <input asp-for="DownloadCategoryName" type="text" class="form-control" placeholder="Download Category Name">
                            <span asp-validation-for="DownloadCategoryName" class="text-danger"></span>
                        </div>                       
                    </div>

                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-lg pull-left"
                           asp-area="Admin"
                           asp-controller="DownloadCategory"
                           asp-action="Index">
                            Download Category List
                        </a>

                        <input type="reset" class="btn btn-outline-light btn-lg pull-right ml-3" value="Cancel">

                        <input type="submit" class="btn btn-outline-success btn-lg pull-right" value="Save">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>