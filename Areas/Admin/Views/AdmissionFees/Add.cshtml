@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Dto.AdminAdmissionFeesDTO

@{
    Layout = "_AdminLayout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">                
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <form asp-controller="AdmissionFees" asp-action="Add" method="post">
                    <div class="card-header">
                        <h3 class="card-title">Add Fees</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="position-relative form-group">
                            <label asp-for="StandardMasterId" class=""></label>
                            <select asp-for="StandardMasterId"
                                    asp-items="@(new SelectList(Model.StandardMasters,"StandardID","StandardName"))"
                                    class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="StandardMasterId" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Amount" class=""></label>
                            <input asp-for="Amount" type="text" class="form-control" placeholder="Standard">
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="AppOnlyAmount" class=""></label>
                            <input asp-for="AppOnlyAmount" type="text" class="form-control" placeholder="Standard">
                            <span asp-validation-for="AppOnlyAmount" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-lg pull-left"
                           asp-area="Admin"
                           asp-controller="AdmissionFees"
                           asp-action="Index">
                            Fees List
                        </a>

                        <input type="reset" class="btn btn-outline-light btn-lg pull-right ml-3" value="Cancel">

                        <input type="submit" class="btn btn-outline-success btn-lg pull-right" value="Save">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>