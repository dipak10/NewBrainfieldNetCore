@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Dto.ExamMasterDTO

@{
    Layout = "_AdminLayout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form asp-controller="Exam" asp-action="Add" method="post">
                    <div class="card-header">
                        <h3 class="card-title">Add Product</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="position-relative form-group">
                            <label asp-for="ExamName" class=""></label>
                            <input asp-for="ExamName" type="text" class="form-control" placeholder="ExamName">
                            <span asp-validation-for="ExamName" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="ExamCategoryID" class=""></label>
                            <select asp-for="ExamCategoryID"
                                    asp-items="@(new SelectList(Model.ExamCategories,"ExamCategoryID","ExamCategoryName"))"
                                    class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="ExamCategoryID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="StandardID" class=""></label>
                            <select asp-for="StandardID"
                                    asp-items="@(new SelectList(Model.Standards,"StandardID","StandardName"))"
                                    class="form-control" id="StandardMaster">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="StandardID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="SubjectID" class=""></label>
                            <select asp-for="SubjectID"
                                    asp-items="@(new SelectList(Model.Subjects,"SubjectID","SubjectName"))"
                                    class="form-control" id="SubjectMaster">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="SubjectID" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="TimeDuration" class=""></label>
                            <input asp-for="TimeDuration" type="text" class="form-control" placeholder="Duration">
                            <span asp-validation-for="TimeDuration" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="MarkPrice" class=""></label>
                            <input asp-for="MarkPrice" type="text" class="form-control" placeholder="Mark Price">
                            <span asp-validation-for="MarkPrice" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="SellPrice" class=""></label>
                            <input asp-for="SellPrice" type="text" class="form-control" placeholder="Sell Price">
                            <span asp-validation-for="SellPrice" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Repetation" class=""></label>
                            <input asp-for="Repetation" type="text" class="form-control" placeholder="Repetation">
                            <span asp-validation-for="Repetation" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="custom-file">
                                <label asp-for="ImageName" class=""></label>
                                <input asp-for="ImageName" type="file" class="custom-file-input" id="customFile" accept="image/*">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                                <span asp-validation-for="ImageName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Notes" class=""></label>
                            <textarea asp-for="Notes" type="text" class="form-control" placeholder="Notes"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <label asp-for="Description" class=""></label>
                            <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <div class="custom-control pl-0">
                                <input asp-for="IsFeatured" id="chkToggle1" type="checkbox" data-toggle="toggle" data-style="slow" checked>
                                <label>Turn on to make it feature</label>
                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="position-relative form-group">
                            <div class="custom-control pl-0">
                                <input asp-for="IsActive" id="chkToggle2" type="checkbox" data-toggle="toggle" data-style="slow" checked>
                                <label>Turn on to display to the user</label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-lg pull-left"
                           asp-area="Admin"
                           asp-controller="Product"
                           asp-action="Index">
                            Fees List
                        </a>

                        <input type="reset" class="btn btn-outline-light btn-lg pull-right ml-3" value="Cancel">

                        <input type="submit" class="btn btn-outline-success btn-lg pull-right" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>