@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Areas.Admin.Models.AddStudyVideosViewModel

@{
    Layout = "_AdminLayout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <form asp-controller="StudyVideos" asp-action="Add" method="post">
                    <div class="card-header">
                        <h3 class="card-title">Add Videos</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="position-relative form-group">
                            <label asp-for="Title" class=""></label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Name">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        @*<div class="position-relative form-group">
                                <label asp-for="Category" class=""></label>
                                <select asp-for="Category">
                                    <option value="1">Phyiscs</option>
                                    <option value="2">Chemistry</option>
                                    <option value="2">Biology</option>
                                    <option>Please select one</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>*@

                        <div class="position-relative form-group">
                            <label asp-for="VideoURL" class=""></label>
                            <input asp-for="VideoURL" type="text" class="form-control" placeholder="URL">
                            <span asp-validation-for="VideoURL" class="text-danger"></span>
                        </div>

                        <div class="position-relative form-group">
                            <div class="custom-control custom-switch">
                                <input asp-for="IsFree" type="checkbox" class="custom-control-input" id="customSwitch1">
                                <label class="custom-control-label" for="customSwitch1">Turn on to download it for free</label>
                                <span asp-validation-for="IsFree" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-lg pull-left"
                           asp-area="Admin"
                           asp-controller="StudyVideos"
                           asp-action="Index">
                            Videos List
                        </a>

                        <input type="reset" class="btn btn-outline-light btn-lg pull-right ml-3" value="Cancel">

                        <input type="submit" class="btn btn-outline-success btn-lg pull-right" value="Save">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>