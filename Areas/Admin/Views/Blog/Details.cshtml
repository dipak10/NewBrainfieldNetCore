@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewBrainfieldNetCore.Entities.tblBlogs

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="timeline mt-5">
            <div>
                <div class="timeline-item">
                    <span class="time"><i class="fas fa-clock"></i> @Model.CreatedDate</span>
                    <h3 class="timeline-header"><a href="#">@Model.BlogTitle</a></h3>
                    <div class="timeline-body">
                        @Html.Raw(Model.BlogContent)
                    </div>
                    <div class="timeline-footer">
                        <a class="btn btn-primary btn-sm mr-3"
                           asp-area="Admin"
                           asp-controller="Blog"
                           asp-action="Index">
                            Back to List
                        </a>

                        <a class="btn btn-danger btn-sm"
                           asp-area="Admin"
                           asp-controller="Blog"
                           asp-action="Delete"
                           asp-route-id="@Model.BlogId">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>