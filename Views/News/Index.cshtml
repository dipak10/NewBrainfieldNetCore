@model List<NewBrainfieldNetCore.Entities.tblNews>
@{
    Layout = "_FrontendLayout";
}

<div class="page-title">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h3>All News</h3>
            </div>
        </div>
    </div>
</div>


<section class="blog-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="row">
                    @foreach (var x in Model)
                    {
                        <div class="col-lg-4 col-md-4">
                            <div class="single-blog">
                                <div class="blog-img">
                                    <a href="#">
                                        <img src="~/Images/News/@x.ImageName" alt="news">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h4>
                                        <span>
                                            <i class="icofont-ui-user"></i> Posted by
                                            <a href="#">Admin</a>
                                        </span>
                                        <span class="date">
                                            <i class="icofont-ui-calendar"></i>
                                            @x.CreatedDate.ToString("dd MMM, yyyy")
                                        </span>
                                    </h4>
                                    <h3>
                                        <a asp-action="Details" asp-controller="News" asp-route-id="@x.NewsID">
                                            @x.NewsHeadline
                                        </a>
                                    </h3>
                                    <a asp-action="Details" asp-controller="News" asp-route-id="@x.NewsID" class="btn btn-primary">
                                        Read More
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>