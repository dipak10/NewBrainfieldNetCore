@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<NewBrainfieldNetCore.Viewmodels.StudentDownloadsViewModel>
@{
    Layout = "_FrontendLayout";
}

<div class="page-title">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <h3>Downloads</h3>
            </div>
        </div>
    </div>
</div>

<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">File name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Upload on</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Title</td>
                                    <td>@x.DownloadCategoryName</td>
                                    <td>@x.UploadOn.ToShortDateString()</td>
                                    <td>
                                        <a href="~/DownloadFiles/@x.FileName" class="btn btn-primary">
                                            Download
                                            <i class="fa fa-download">
                                            </i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>